<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    android:orientation="vertical"
    tools:context=".YourProfile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:background="#fff">


            <ImageView
                android:id="@+id/image_View"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="30dp"
                app:srcCompat="@mipmap/ic_launcher_img" />

            <EditText
                android:id="@+id/mobile"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/image_View"
                android:background="#fff"
                android:ems="10"
                android:inputType="textPersonName|textMultiLine"
                android:padding="10dp"
                android:text="Eng-Yara"
                android:textSize="16sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_alignBottom="@id/mobile"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@id/image_View"
                android:background="#ededed"
                android:paddingTop="30dp" />

            <EditText
                android:id="@+id/mobile_num"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/mobile"
                android:layout_alignTop="@id/mobile"
                android:layout_alignEnd="@id/mobile"
                android:layout_marginTop="50dp"
                android:layout_toEndOf="@id/image_View"
                android:background="#fff"
                android:ems="10"
                android:inputType="textPersonName|textMultiLine"
                android:padding="10dp"
                android:text="Almadhoun"
                android:textSize="16sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_alignBottom="@id/mobile_num"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@id/image_View"
                android:background="#ededed"
                android:paddingTop="30dp" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/info"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:background="#fff">

            <LinearLayout
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        android:ems="8"
                        android:inputType="number|textPersonName"
                        android:padding="20dp"
                        android:text="Mobile Number"
                        android:textSize="16sp"
                        tools:text="Mobile Number" />


                    <EditText
                        android:id="@+id/mobile_num"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/mobile"
                        android:layout_alignTop="@id/mobile"
                        android:layout_alignEnd="@id/mobile"
                        android:background="#fff"
                        android:ems="18"
                        android:gravity="right"
                        android:inputType="phone"
                        android:text="+97258458698"
                        android:textSize="16sp" />




                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_alignBottom="@id/mobile"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="#ededed"
                    android:paddingTop="30dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        android:ems="9"
                        android:inputType="text"
                        android:padding="20dp"
                        android:text="Email ID"
                        android:textSize="16sp"
                        tools:text="Mobile Number" />

                    <EditText
                        android:id="@+id/mobile_num"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/mobile"
                        android:layout_alignTop="@id/mobile"
                        android:layout_alignEnd="@id/mobile"
                        android:background="#fff"
                        android:ems="15"
                        android:gravity="right"
                        android:hint="enter email"
                        android:inputType="textEmailAddress|textMultiLine"
                        android:singleLine="false"
                        android:textSize="16sp" />

                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_alignBottom="@id/mobile"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="#ededed"
                    android:paddingTop="30dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        android:ems="11"
                        android:inputType="text"
                        android:padding="20dp"
                        android:text="Gender"
                        android:textSize="16sp"
                        tools:text="Mobile Number" />

                    <EditText
                        android:id="@+id/mobile_num"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/mobile"
                        android:background="#fff"
                        android:ems="15"
                        android:gravity="right"
                        android:hint="select"
                        android:inputType="text"
                        android:textSize="16sp" />

                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_alignBottom="@id/mobile"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="#ededed"
                    android:paddingTop="30dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        android:ems="10"
                        android:inputType="text"
                        android:padding="20dp"
                        android:text="Date Of Birth"
                        android:textSize="16sp"
                        tools:text="Mobile Number" />

                    <EditText
                        android:id="@+id/mobile_num"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/mobile"
                        android:layout_alignTop="@id/mobile"
                        android:layout_alignEnd="@id/mobile"
                        android:background="#fff"
                        android:ems="15"
                        android:gravity="right"
                        android:hint="mm/dd/yyyy"
                        android:inputType="date"
                        android:textSize="16sp" />

                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_alignBottom="@id/mobile"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="#ededed"
                    android:paddingTop="30dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        android:ems="8"
                        android:inputType="text"
                        android:padding="20dp"
                        android:text="Experience"
                        android:textSize="16sp"
                        tools:text="Mobile Number" />

                    <EditText
                        android:id="@+id/mobile_num"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/mobile"
                        android:layout_alignTop="@id/mobile"
                        android:layout_alignEnd="@id/mobile"
                        android:background="#fff"
                        android:ems="15"
                        android:gravity="right"
                        android:hint="+add"
                        android:inputType="text|textMultiLine"
                        android:textSize="16sp" />

                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_alignBottom="@id/mobile"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="#ededed"
                    android:paddingTop="30dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        android:ems="10"
                        android:inputType="text"
                        android:padding="20dp"
                        android:text="Emergency Contact"
                        android:textSize="16sp"
                        tools:text="Mobile Number" />

                    <EditText
                        android:id="@+id/mobile_num"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/mobile"
                        android:layout_alignTop="@id/mobile"
                        android:layout_alignEnd="@id/mobile"
                        android:background="#fff"
                        android:ems="15"
                        android:gravity="right"
                        android:hint="add details"
                        android:inputType="text|textMultiLine"
                        android:textSize="16sp" />

                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_alignBottom="@id/mobile"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="#ededed"
                    android:paddingTop="30dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        android:ems="8"
                        android:inputType="text"
                        android:padding="20dp"
                        android:text="Location"
                        android:textSize="16sp"
                        tools:text="Mobile Number" />

                    <EditText
                        android:id="@+id/mobile_num"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/mobile"
                        android:layout_alignTop="@id/mobile"
                        android:layout_alignEnd="@id/mobile"
                        android:background="#fff"
                        android:ems="15"
                        android:gravity="right|end"
                        android:inputType="text|textMultiLine"
                        android:text="Palestine-Gaza"
                        android:textSize="16sp" />

                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info"
            android:layout_marginStart="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/buttun_default"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="#fff" />


    </RelativeLayout>

</ScrollView>